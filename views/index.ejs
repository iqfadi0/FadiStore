<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Fadi Store</title>
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <meta name="description" content="Fadi Store - A sleek one-page dark showcase.">
  <style>
    /* WhatsApp floating button */
    .whatsapp-btn {
      position: fixed;
      bottom: 20px;
      right: 20px;
      background-color: #25D366;
      color: white;
      padding: 12px 16px;
      border-radius: 50px;
      text-decoration: none;
      font-size: 18px;
      display: flex;
      align-items: center;
      gap: 8px;
      box-shadow: 0 4px 6px rgba(0,0,0,0.2);
      transition: transform 0.2s;
      z-index: 1000;
    }

    .whatsapp-btn:hover {
      transform: scale(1.1);
    }
  </style>
</head>
<body>
  <div class="container">
    <header class="header">
      <div class="brand">Fadi Store</div>
    </header>

    <div class="grid">
      <% if (products.length === 0) { %>
        <div class="card">
          <div class="desc">
            <span class="code-title">No items yet.</span> Use the admin panel to add your first item.
          </div>
        </div>
      <% } %>

      <% products.forEach(p => { %>
        <article class="card">
          <% if (p.imagePath) { %>
            <img src="<%= p.imagePath %>" alt="Item Image">
          <% } %>
          <div class="desc"><%= p.description %></div>
        </article>
      <% }) %>
    </div>

    <footer>
      © <%= new Date().getFullYear() %> • Fadi Store • <a href="/">Home</a>
    </footer>
  </div>

  <!-- WhatsApp Button -->
  <a href="https://wa.me/9613177862" target="_blank" class="whatsapp-btn">
    <i class="fab fa-whatsapp"></i> Chat with us
  </a>
</body>
</html>
